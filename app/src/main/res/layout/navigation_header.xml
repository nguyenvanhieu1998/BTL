<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_navigationview"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_Navigation_Header_imgFace"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image"
        app:civ_border_color="#FAF6F6"
        app:civ_border_width="2dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_Navigation_Header_txtName"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Hello world !"
            android:textColor="#F8F7F7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_Navigation_Header_txtAdmin"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#F8F5F5"
            android:text="Adminstrator"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>