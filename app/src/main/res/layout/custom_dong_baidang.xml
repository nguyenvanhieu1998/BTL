<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:background="@drawable/custom_backgroud_item_baidang"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="2dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_imgAnh_dongBaiDang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_txtName_dongBaiDang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_txtNoiDung_dongBaiDang"
                    android:layout_width="150dp"
                    android:layout_height="11dp"
                    android:text="Nội dung"
                    android:textStyle="normal"
                    android:textColor="#0C0C0C"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/id_txtThoiGian_dongBaiDang"
                    android:layout_width="150dp"
                    android:layout_height="11dp"
                    android:text="Thời gian"
                    android:textStyle="normal"
                    android:textColor="#0C0C0C"
                    android:textSize="8sp" />
            </LinearLayout>
            <ImageView
            android:id="@+id/id_dongBaiDang_imgEdit"
            android:layout_width="20dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
            android:src="@mipmap/edit_2"
            android:layout_height="20dp" />
            <ImageView
                android:id="@+id/id_imgDelete_dongBaiDang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/delete_3" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
