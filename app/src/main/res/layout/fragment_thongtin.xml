<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/custom_framelayout_thongtin">
    </FrameLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_FragmentThongTin_imgThanhVien"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image"
            app:civ_border_color="#F7F2F2"
            app:civ_border_width="2dp"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="250dp">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/id_FragmentThongTin_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp" />
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/id_FragmentThongTin_txtAccountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_FragmentThongTin_txtName"
                android:text="Hình thức :"
                android:textSize="12sp" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="150dp">
        <ImageView
            android:id="@+id/id_FragmentThongTin_imgCamnera"
            android:src="@drawable/camera"
            android:layout_width="25dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="15dp"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/id_FragmentThongTin_imgFolder"
            android:src="@drawable/folder"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:scaleType="fitCenter"
            android:layout_height="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/id_FragmentThongTin_txtEmail"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0A0A0A"/>
    <TextView
        android:id="@+id/id_FragmentThongTin_txtPhone"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0A0A0A"/>
    <TextView
        android:id="@+id/id_FragmentThongTin_txtAddress"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0A0A0A"/>

    <Button
        android:id="@+id/id_FragmentThongTin_btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_btn_fragment_thongtin"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:textColor="#F7F7F0" />
    <Button
        android:id="@+id/id_FragmentThongTin_btnBaiVietCuaToi"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/custom_btn_fragment_thongtin"
        android:text="Bài viết của tôi"
        android:textAllCaps="false"
        android:textColor="#F7F7F0" />
</LinearLayout>