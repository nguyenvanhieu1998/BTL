<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FCF8F8"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/id_ActivityDoiMatKhau_ActionBar"
        layout="@layout/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"></include>
    <TextView
        android:id="@+id/id_ActivityDoiMatKhau_txtDoiMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#045292"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="ĐỔI MẬT KHẨU"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/id_ActivityDoiMatKhau_edtEmail"
        android:hint="Email"
        android:padding="7dp"
        android:textSize="13sp"
        android:background="@drawable/custom_edittextdangnhap"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:id="@+id/id_ActivityDoiMatKhau_edtOldPass"
        android:hint="Old Password"
        android:padding="7dp"
        android:textSize="13sp"
        android:background="@drawable/custom_edittextdangnhap"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:id="@+id/id_ActivityDoiMatKhau_edtNewPass"
        android:hint="New password"
        android:padding="7dp"
        android:textSize="13sp"
        android:background="@drawable/custom_edittextdangnhap"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/id_ActivityDoiMatKhau_btnChange"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/custom_button_activitydangnhap"
            android:text="Change"
            android:textColor="#F3F3ED"
            android:textSize="12sp" />
        <Button
            android:id="@+id/id_ActivityDoiMatKhau_btnCancel"
            android:text="Cancel"
            android:textSize="12sp"
            android:textColor="#F3F3ED"
            android:background="@drawable/custom_button_activitydangnhap"
            android:layout_marginLeft="10dp"
            android:layout_width="85dp"
            android:layout_height="34dp" />
    </LinearLayout>
</LinearLayout>