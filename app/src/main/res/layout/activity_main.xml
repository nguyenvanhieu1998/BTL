<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/id_ActivityDangNhap_txtDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0A0A0A"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="ĐĂNG NHẬP"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/img_home_login"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/email_blue"
            android:layout_width="27dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="54dp"
            android:layout_height="27dp" />
        <EditTex
            android:id="@+id/id_ActivityDangNhap_edtEmail"
            android:hint="Email@gmail.com"
            android:background="@drawable/custom_edittextdangnhap"
            android:textColor="#1F3CDB"
            android:padding="10dp"
            android:paddingStart="50dp"
            android:textColorHint="#AFAFA8"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/password_blue"
            android:layout_width="27dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="54dp"
            android:layout_height="26dp" />
        <EditText
            android:id="@+id/id_ActivityDangNhap_edtPassword"
            android:hint="Password"
            android:background="@drawable/custom_edittextdangnhap"
            android:textColor="#1F3CDB"
            android:padding="10dp"
            android:paddingStart="50dp"
            android:inputType="textPassword"
            android:textColorHint="#AFAFA8"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <CheckBox
           android:id="@+id/id_ActivityDangNhap_cbNhoMatKhau"
           android:text="Nhớ mật khẩu"
           android:textColor="#0A0A0A"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="45dp"
           android:textSize="13sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/id_ActivityDangNhap_txtDoiMatKhau"
           android:layout_width="77dp"
           android:layout_height="24dp"
           android:layout_marginLeft="80dp"
           android:layout_marginTop="10dp"
           android:textStyle="italic"
           android:text="Đổi mật khẩu"
           android:textAllCaps="false"
           android:textColor="#0A0A0A"
           android:textSize="13sp"
          />
   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp">

    <Button
        android:id="@+id/id_ActivityDangNhap_btnDangNhap"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/custom_button_activitydangnhap"
        android:text="Đăng Nhập"
        android:textColor="#F3F3ED"
        android:textSize="12sp" />
    <Button
        android:id="@+id/id_ActivityDangNhap_btnDangKi"
        android:text="Đăng Kí"
        android:textSize="12sp"
        android:textColor="#F3F3ED"
        android:background="@drawable/custom_button_activitydangnhap"
        android:layout_marginLeft="10dp"
        android:layout_width="85dp"
        android:layout_height="34dp" />
</LinearLayout>
</LinearLayout>