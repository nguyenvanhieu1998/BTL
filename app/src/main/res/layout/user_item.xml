<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_mood_black_24dp"/>
    <RelativeLayout
        android:layout_toRightOf="@id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_FragmentTroChuyen_DSUserChat_txtUserName"
            android:text="Name"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_FragmentTroChuyen_DSUserChat_txtLastMessage"
            android:text=""
            android:textSize="10sp"
            android:textColor="#0A0A0A"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/id_FragmentTroChuyen_DSUserChat_txtUserName"
            android:layout_width="300dp"
            android:layout_height="13dp" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_FragmentTroChuyen_DSUserChat_imgOnline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        android:visibility="gone"
        app:civ_border_color="@color/colorBlue"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_toRightOf="@id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_marginTop="-14dp"
        android:layout_marginLeft="-14dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_FragmentTroChuyen_DSUserChat_imgOffline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        android:visibility="gone"
        app:civ_border_color="@color/colorGrey"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_toRightOf="@id/id_FragmentTroChuyen_DSUserChat_imgUser"
        android:layout_marginTop="-14dp"
        android:layout_marginLeft="-14dp"
        />
</RelativeLayout>