<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtTittle"
        android:text="Chi tiết bài đăng "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtName"
        android:textSize="14sp"
        android:textColor="#070707"
        android:text="Người đăng : "
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtContent"
        android:textSize="14sp"
        android:text="Nội dung : "
        android:textColor="#070707"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtMoney"
        android:textSize="14sp"
        android:text="Số tiền : "
        android:textColor="#070707"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtLaiSuat"
        android:textSize="14sp"
        android:text="Lãi suất : "
        android:textColor="#070707"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtThoiHan"
        android:textSize="14sp"
        android:text="Thời hạn : "
        android:layout_marginLeft="10dp"
        android:textColor="#070707"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_dialogBaiVietChoPheDuyet_txtThoiGian"
        android:textSize="14sp"
        android:text="Ngày đăng : "
        android:layout_marginLeft="10dp"
        android:textColor="#070707"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp">
        <Button
        android:id="@+id/id_dialogBaiVietChoPheDuyet_btnPheDuyet"
            android:text="Phê duyệt"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/custom_buttom_trangchu"
        android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
        android:layout_height="35dp" />
        <Button
            android:id="@+id/id_dialogBaiVietChoPheDuyet_btnHuyBo"
            android:text="Không duyệt"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/custom_buttom_trangchu"
            android:layout_width="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginRight="10dp"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>